<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.login.japan.MainActivity">

    <!-- Gunakan FrameLayout untuk menumpuk overlay dan teks -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image">

        <!-- View overlay gelap -->
        <View
            android:id="@+id/darkOverlay"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#80000000" />

        <!-- Konten di dalam overlay -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Judul TextView -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="180pt"
                android:fontFamily="@font/bree_serif"
                android:padding="8dp"

                android:text="Sensoji Temple"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold" />

            <!-- Deskripsi TextView -->
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="50dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/poppinsregular"
                android:textStyle="bold"
                android:padding="8dp"
                android:paddingRight="40dp"
                android:text="It is Tokyo's oldest temple, and one of its most significant. Formerly associated with the Tendai sect of Buddhism."
                android:textColor="@android:color/white"
                android:textSize="15sp" />

            <!-- Button -->
            <Button
                android:id="@+id/buttonDetails"
                android:layout_width="300dp"
                android:layout_gravity="center"
                android:layout_height="70dp"
                android:text="See Details"
                android:textAllCaps="false"
                android:backgroundTint="#3F86D3"
                android:textColor="#FFFFFF"
                android:layout_marginTop="16dp" />
        </LinearLayout>
    </FrameLayout>

</RelativeLayout>
